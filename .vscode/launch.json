{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright Test",
            "console": "internalConsole",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "playwright",
                "test",
                "${input:selectFile}",
                "--project=${input:browser}",
                "${input:headed}",
                "${input:debug}",
                "${input:ui}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "browser",
            "type": "pickString",
            "description": "Select the browser",
            "options": [
                "chromium",
                "firefox",
                "webkit"
            ],
            "default": "chromium"
        },
        {
            "id": "selectFile",
            "type": "command",
            "command": "extension.commandvariable.file.openDialog",
            "args": {
                "canSelect": "files",
                "defaultUri": "${workspaceFolder}/tests",
                "transform": {
                    "text": "${fileBasename}",
                }
            }
        },
        {
            "id": "headed",
            "type": "pickString",
            "description": "Run in headed mode?",
            "options": [
                {
                    "label": "Yes",
                    "value": "--headed"
                },
                {
                    "label": "No",
                    "value": ""
                }
            ],
            "default": ""
        },
        {
            "id": "debug",
            "type": "pickString",
            "description": "Run in debug mode?",
            "options": [
                {
                    "label": "Yes",
                    "value": "--debug"
                },
                {
                    "label": "No",
                    "value": ""
                }
            ],
            "default": ""
        },
        {
            "id": "ui",
            "type": "pickString",
            "description": "Use the Playwright UI?",
            "options": [
                {
                    "label": "Yes",
                    "value": "--ui"
                },
                {
                    "label": "No",
                    "value": ""
                }
            ],
            "default": ""
        }
    ]
}